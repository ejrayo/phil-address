{
  "name": "phil-address",
  "version": "2.0.0",
  "description": "Lightweight Philippine address data fetcher with smart caching, search, and request deduplication",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "types/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist",
    "types",
    "examples",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "rollup -c",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src examples",
    "prepublishOnly": "npm run test && npm run build",
    "dev": "rollup -c -w"
  },
  "keywords": [
    "philippines",
    "philippine-address",
    "address",
    "regions",
    "provinces",
    "cities",
    "barangays",
    "dropdown",
    "autocomplete",
    "ph-address",
    "address-picker",
    "location",
    "geography",
    "react-dropdown",
    "address-search"
  ],
  "author": "@jeijei11",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jeijei11/phil-address.git"
  },
  "bugs": {
    "url": "https://github.com/jeijei11/phil-address/issues"
  },
  "homepage": "https://github.com/jeijei11/phil-address#readme",
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-node-resolve": "^15.3.1",
    "@rollup/plugin-terser": "^0.4.4",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "rollup": "^3.29.5"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ]
  },
  "engines": {
    "node": ">=12.0.0"
  }
}
